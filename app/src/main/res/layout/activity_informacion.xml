<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#376ba6"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp"
    android:background="@drawable/shadow" >


    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="0dp"  android:layout_marginLeft="20dp"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/iEstado"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_notification_overlay"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curso #"
            android:id="@+id/txtEstado"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lugar"
        android:id="@+id/tLugar"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tHora"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:text="Hora: " />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tCal"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Calificacion" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/ediMensaje"
        android:hint="Escriba aquÃ­ su mensaje"
        android:layout_margin="10dp"
        android:layout_weight="2"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Enviar Mensaje"
        android:id="@+id/butMensaje"
        android:onClick="onMensaje"
        android:layout_marginBottom="10dp"/>



</LinearLayout>
</RelativeLayout>