<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="6dp"
    tools:context="com.ulima.sw.Asesorias.Login.LoginActivity"
    android:background="@drawable/shadow">
    <TextView
        android:id="@+id/txtSubtitulo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="#000000"
        android:text="ASESORIAS UL"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal|bold|italic"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp" 
        android:layout_marginBottom="10dp"
        android:layout_weight="1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ulima"
        android:layout_weight="5"
        android:layout_marginBottom="20dp"

        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        android:layout_weight="3"
        android:orientation="vertical"
        >

    <EditText

        android:id="@+id/txtUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:ellipsize="start"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/txtContra"
        android:textColorHint="@color/Titulos2"
        android:textColor="@color/Titulos2"
        android:singleLine="true"
        android:hint="Usuario"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/txtContra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:inputType="textPassword"
        android:textColorHint="@color/Titulos2"
        android:textColor="@color/Titulos2"
        android:ellipsize="start"
        android:hint="ContraseÃ±a"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        />
    <Button
        android:id="@+id/btnIng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onLoginClicked"
        android:background="@color/botones"
        android:textColor="@color/Titulos2"
        android:text="Ingresar"
        android:layout_margin="16dp"/>
    </LinearLayout>




</LinearLayout>
